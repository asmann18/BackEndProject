@using Back_End_Project.Models
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}

<div class="card-body">



    <div class="table-responsive">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Blog blog in Model)
                {

                    <tr>
                        <td>@blog.Id</td>
                        <td>
                            <img src="~/img/blog/@blog.Image"
                             alt="Inner Image" />
                        </td>
                        <td>@blog.Name</td>


                        <td>
                            <a class="btn btn-success" asp-route-id="@blog.Id" asp-action="Detail">Detail</a>
                            <a class="btn btn-warning" asp-route-id="@blog.Id" asp-action="Update">Update</a>
                            <a class="btn btn-danger" asp-route-id="@blog.Id" asp-action="Delete">Delete</a>

                        </td>

                    </tr>
                }


            </tbody>
        </table>
        <a class="create_button btn btn-success" asp-action="Create">  Create </a>

    </div>




</div>
    </div>
    </div>



