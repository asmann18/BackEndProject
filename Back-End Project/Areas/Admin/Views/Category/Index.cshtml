@using Back_End_Project.Models
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}



<div class="card-body">



    <div class="table-responsive">
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
               
                    <th>Name</th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {

                    <tr>
                        <td>@category.Id</td>
                 
                        <td>@category.Name</td>


                        <td>
                            <a class="btn btn-warning" asp-route-id="@category.Id" asp-action="Update">Update</a>
                            <a class="btn btn-danger" asp-route-id="@category.Id" asp-action="Delete">Delete</a>

                        </td>

                    </tr>
                }


            </tbody>
        </table>
        <a class="create_button btn btn-success" asp-action="Create">  Create </a>

    </div>




</div>
    </div>
    </div>




