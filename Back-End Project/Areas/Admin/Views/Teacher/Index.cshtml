@using Back_End_Project.Models
@model List<Teacher>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/shared/_AdminLayout.cshtml";
}

<div class="card-body">



    <div class="table-responsive">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>

                    <th>Image</th>
                    <th>Name</th>

                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Teacher teacher in Model)
                {

                    <tr>
                        <td>@teacher.Id</td>

                        <td>
                            <img src="~/img/teacher/@teacher.Image" alt="inner image"/>

                        </td>

                        <td>@teacher.Name</td>


                        <td>
                            <a class="btn btn-success" asp-route-id="@teacher.Id" asp-action="Detail">Detail</a>
                            <a class="btn btn-warning" asp-route-id="@teacher.Id" asp-action="Update">Update</a>
                            <a class="btn btn-danger" asp-route-id="@teacher.Id" asp-action="Delete">Delete</a>

                        </td>

                    </tr>
                }


            </tbody>
        </table>
        <a class="create_button btn btn-success" asp-action="Create">  Create </a>

    </div>




</div>
    </div>
    </div>


